library(xslt)
library(ggplot2)
library(dplyr)
library(reshape2)
path <- choose.files()

Ergebnis <- readxl::read_xlsx(path = path,sheet = 1)
lm(Geschmack~., data = Ergebnis[,-c(1,6)]) 
Ergebnis <- Ergebnis[,c(1,7:10)]
Ergebnis <- `colnames<-`(Ergebnis, c("Runde","S??","Sauer","Bitter","Geschmack"))
SumErgebnis <- aggregate(Ergebnis, by=list(Ergebnis$Runde), mean)
SumErgebnis <- SumErgebnis[,-1]
SumErgebnis <- melt(SumErgebnis, id.vars = "Runde")
ggplot(data=SumErgebnis, aes(x=Runde,y=value, fill= factor(variable)))+geom_bar(stat="identity", position = "dodge")+ labs(title = "Espressomaschineneinstellsonntagergebnisse")+ ylab("Bewertung")+scale_fill_discrete(name= "Kategorie")
lm(Geschmack~., data = Ergebnis[,-c(1,6)]) 


